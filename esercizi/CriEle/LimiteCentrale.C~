#if !defined(__CINT__) || defined(__MAKECINT__)
#include <Riostream.h>
#include <TCanvas.h>
#include <TFile.h>
#include <TH1F.h>
#include <TRandom.h>

#include <boost/foreach.hpp>
#define foreach BOOST_FOREACH
#endif

void LimiteCentrale(){
  const int elementi = 100000;
  float numerisinistra[elementi];
  float numeridestra[elementi];

  TH1F *histo = new TH1F("limitecentrale", "Termini da sommare", 100, 0., 1.);

  for(int i=0; i < elementi; i++){
    numerisinistra[i] = gRandom->Rndm()*(0.2 - 0.);
    numeridestra[i] = gRandom->Rndm()*(1. - 0.8) + 0.8;
    histo->Fill(numerisinistra[i]);
    histo->Fill(numeridestra[i]);
  }

  histo->DrawCopy();

  
}
